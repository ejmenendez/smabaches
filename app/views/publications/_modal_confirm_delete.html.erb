<!-- Dialogo de confirmacion para borrado de publicaciones, que recibe el id de publicacion a borra -->
<div class="modal fade" id="confirm-delete<%=publication.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">¿Qué desea hacer?</h4>
      </div>

      <div class="modal-body">
          <p>Una vez que borre la publicacion no sera posible recuperarla</p>
      </div>

      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <% if policy(publication).destroy? %>
          <%= link_to 'Borrar', publication_path(publication), method: :delete, :class => "btn btn-danger"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
